@model RestauranteMexicano.Models.Platillo

@{
    ViewData["Title"] = "Delete";
}

<div class = "container">
    <div class="row">
        <div class="col-12 d-flex justify-content-center">
            <div class="alert alert-danger" role="alert">
                <h1>Borrar Platillo</h1>
            </div>
        </div>
    </div>
</div>

